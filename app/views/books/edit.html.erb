<div class="container">
<div class="row">
<div class="col-xs-12">
<div class="edit-book">

<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

<h4>Title</h4>
<%= f.text_field :title, class: "form-control" %>
<h4>Opinion</h4>
<%= f.text_area :body, class: "form-control" %><br>
<%= f.submit "Update Book", class: "btn btn-primary btn-block" %>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
|
<%= link_to "Back", books_path %>

</div>
</div>
</div>
</div>