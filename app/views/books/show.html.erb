<%= render "users/list", user: @user, book: @new_book %>


<div class="col-xs-9">

<h1>Book detail</h1>

<table class="table">

  <tbody>
    <tr>
      <td>
        <%= link_to user_path(@book.user.id) do %>
          <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, format: 'jpeg' ,fallback: "no_image.jpg" %><br>
          <%= @book.user.name %>
        <% end %>
      </td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>

    <% if @book.user_id == current_user.id %>
      <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success btn-sm" %></td>
      <td><%= link_to "Destroy", book_path(@book.id), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-danger btn-sm" %></td>
    <% end %>
    </tr>
  </tbody>

</table>

</div>
</div>

</div>